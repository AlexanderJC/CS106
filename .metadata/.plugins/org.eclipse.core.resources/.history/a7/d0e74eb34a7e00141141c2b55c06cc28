import java.util.*;
/**
 * This class is the Creator menu. Within it, the user can create enemies.
 * Enemies created in this way are added to the "entities" array, created in the main method.
 */
public class Creator {

	//Initialize an ArrayList to store all enemies created.
	public ArrayList<Enemy> entities = new ArrayList<Enemy>();
	
	/**
	 * 
	 * @return The menu returns a meaningless integer so that it doesn't pile itself up on the stack.
	 */
	public int creatorLoop () {
		
		//Let the user know that they're in the creation menu now, and launch a Scanner so they can navigate.
		System.out.println("Entered Creator. Choose an action: \n 1: Initialize an enemy from the archives. \n 2: Initialize a custom enemy. \n 3: Quit.");
		Scanner selector = new Scanner(System.in);
		int selection = selector.nextInt();
		
		//Start the loop.
		if (selection == 1) {
			System.out.println("Enter the name and desired level of the entity you wish to create: ");
			Enemy enemy = new Enemy(selector.next(), selector.nextInt());
			entities.add(enemy);
			return 1;
		} else {
			return 1;
		}
	}
}
